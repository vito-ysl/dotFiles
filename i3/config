# =======================
# CONFIG I3 - vito-ysl
# =======================

set $mod Mod4

# Font
font pango:monospace 8

#

# Configurar layout do teclado ThinkPad
exec --no-startup-id setxkbmap -model thinkpad -layout br -variant abnt2 -option grp:alt_shift_toggle


# Autostart
exec --no-startup-id dex --autostart --environment i3
#exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet
exec --no-startup-id flameshot 
exec --no-startup-id feh --bg-center $HOME/.config/wallpaper/wall.jpg 


# =======================
# Programas customizados
# =======================

# Bloqueio de tela (customizado)
bindsym $mod+Ctrl+b exec i3lock -c 000000

# Gerenciador de Arquivos

bindsym $mod+e exec pcmanfm

# Editor de texto (Mousepad)
bindsym $mod+m exec mousepad

# Firefox
bindsym $mod+b exec firefox

# Localizador de apps (XFCE4-appfinder)
bindsym $mod+Ctrl+f exec xfce4-appfinder

# Gimp
bindsym $mod+g exec gimp


# Screenshot
bindsym Print exec flameshot gui


# =======================
# Janela / Estética
# =======================

# Ocultar borda com título
for_window [class="^.*"] border pixel 1

# Cor da borda da janela ativa (verde WhatsApp)
#client.focused #25D366 #25D366 #25D366 #25D366 #25D366

client.focused          #005f00 #005f00 #F8F8F2 #005f00 #005f00
client.focused_inactive #003f00 #003f00 #F8F8F2 #002200 #002200
client.unfocused        #003f00 #003f00 #F8F8F2 #002200 #002200

# Mostrar/esconder barra

#Teclas padrão do i3
# =======================

# Terminal
bindsym $mod+Return exec alacritty

# Kill janela
bindsym $mod+q kill

# Menu apps (padrão dmenu)
bindsym $mod+d exec --no-startup-id dmenu_run


# Aumentar volume
bindsym XF86AudioRaiseVolume exec --no-startup-id sh -c "pactl set-sink-volume @DEFAULT_SINK@ +5%"

# Diminuir volume
bindsym XF86AudioLowerVolume exec --no-startup-id sh -c "pactl set-sink-volume @DEFAULT_SINK@ -5%"

# Mudo / desmudo
bindsym XF86AudioMute exec --no-startup-id sh -c "pactl set-sink-mute @DEFAULT_SINK@ toggle"


# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# =======================
# Reload, Restart, Exit
# =======================
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# =======================
# Resize Mode
# =======================
# Mover janela focada com Shift + setas
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Redimensionar janelas
bindsym $mod+Control+Right resize shrink width 10 px
bindsym $mod+Control+Left resize grow width 10 px
bindsym $mod+Control+Up resize shrink height 10 px
bindsym $mod+Control+Down resize grow height 10 px


# =======================
# Barra de status
# =======================
bar {
    status_command i3status
    position top
    font pango:monospace 12
    workspace_buttons yes
}

exec --no-startup-id xset s off       # Desativa screensaver
exec --no-startup-id xset -dpms       # Desativa DPMS
exec --no-startup-id xset s noblank   # Não deixa a tela apagar
exec --no-startup-id xrandr --output HDMI-2 --mode 1920x1080 --right-of eDP-1 --auto
exec --no-startup-id xinput set-prop "SynPS/2 Synaptics TouchPad" "libinput Tapping Enabled" 1
